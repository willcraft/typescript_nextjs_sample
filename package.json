{
  "name": "test",
  "version": "1.0.0",
  "license": "ISC",
  "engines": {
    "node": "8"
  },
  "scripts": {
    "next": "cd ./src/next && next -p 3001",
    "preserve": "npm run build-public && npm run build-funcs && npm run build-app && npm run copy-deps && npm run install-deps",
    "serve": "cross-env NODE_ENV=production firebase serve",
    "predeploy": "npm run build-public && npm run build-funcs && npm run build-app && npm run copy-deps",
    "deploy": "firebase deploy",
    "dev": "node server.js",
    "build": "next build",
    "start": "next start",
    "build-public": "cpx ./src/public/**/*.* dist/public -C",
    "build-funcs": "cd src/functions && tsc",
    "build-app": "next build ./src/next/",
    "copy-deps": "cpx \"*{package.json,package-lock.json,yarn.lock}\" dist/functions -C",
    "install-deps": "cd dist/functions && npm i"
  },
  "dependencies": {
    "express": "^4.17.1",
    "firebase-admin": "^8.2.0",
    "firebase-functions": "^3.1.0",
    "isomorphic-unfetch": "^3.0.0",
    "next": "^9.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/node": "^12.0.12",
    "@types/react": "^16.8.23",
    "@types/react-dom": "^16.8.4",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "cpx": "^1.5.0",
    "cross-env": "^5.2.0",
    "eslint": "^6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.2",
    "firebase-tools": "^7.0.2",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "typescript": "^3.5.2"
  }
}
